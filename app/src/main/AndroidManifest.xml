<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.osmangoninahid.androidmaterialdesigntemplate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".view.quote.ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.quote.ArticleDetailActivity"
            android:label=""
            android:parentActivityName=".view.quote.ListActivity"/>
        <activity android:name=".view.ViewSampleActivity"
            android:label="Samples"
            android:parentActivityName=".view.quote.ListActivity"/>
        <activity android:name=".view.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".view.quote.ListActivity"/>

    </application>


</manifest>
